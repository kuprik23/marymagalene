# Mary Platform Environment Configuration Template
# Copy this file to .env and fill in your values

# ========================================
# Application Configuration
# ========================================
NODE_ENV=development
APP_NAME=Mary Platform
APP_VERSION=1.0.0
APP_PORT=3000

# ========================================
# Database Configuration
# ========================================

# PostgreSQL (Main Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mary_db
POSTGRES_USER=mary_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# MongoDB (Document Store)
MONGODB_URI=mongodb://localhost:27017/mary
MONGODB_DB=mary_documents

# Redis (Cache & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ========================================
# API Gateway Configuration
# ========================================
GATEWAY_PORT=8080
GATEWAY_HOST=0.0.0.0
GATEWAY_CORS_ORIGINS=http://localhost:3000,tauri://localhost

# ========================================
# Microservices Ports
# ========================================
AUTH_SERVICE_PORT=8081
AUTH_SERVICE_URL=http://localhost:8081

CRM_SERVICE_PORT=8082
CRM_SERVICE_URL=http://localhost:8082

AI_ORCHESTRATOR_PORT=8083
AI_ORCHESTRATOR_URL=http://localhost:8083

INTEGRATION_HUB_PORT=8084
INTEGRATION_HUB_URL=http://localhost:8084

PAYMENT_SERVICE_PORT=8085
PAYMENT_SERVICE_URL=http://localhost:8085

MCP_SERVER_PORT=8086
MCP_SERVER_URL=http://localhost:8086

ANALYTICS_SERVICE_PORT=8087
ANALYTICS_SERVICE_URL=http://localhost:8087

WEBSOCKET_SERVICE_PORT=8088
WEBSOCKET_SERVICE_URL=http://localhost:8088

# ========================================
# Authentication & Security
# ========================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_random_string
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_minimum_32_characters
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Encryption
ENCRYPTION_KEY=your_encryption_key_32_bytes_hex_string_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# OAuth2/OIDC
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# ========================================
# AI Provider API Keys
# ========================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_PROJECT_ID=your-google-project-id

# Cohere
COHERE_API_KEY=your-cohere-api-key-here

# Hugging Face
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ========================================
# Vector Database (for AI/RAG)
# ========================================
VECTOR_DB_TYPE=pinecone
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX=mary-embeddings

# Alternative: Weaviate
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your-weaviate-api-key

# ========================================
# Payment Processing
# ========================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ========================================
# Social Media Integration
# ========================================

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Instagram
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# ========================================
# Email Service
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@maryplatform.com

# SendGrid Alternative
SENDGRID_API_KEY=your-sendgrid-api-key

# ========================================
# Cloud Storage
# ========================================

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mary-platform-storage

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_STORAGE_CONTAINER=mary-storage

# Google Cloud Storage
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=mary-platform-storage

# ========================================
# Monitoring & Logging
# ========================================

# Sentry
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Datadog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Prometheus
PROMETHEUS_PORT=9090

# ========================================
# Message Queue
# ========================================
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Kafka Alternative
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=mary-platform

# ========================================
# Development Tools
# ========================================
DEBUG=false
LOG_LEVEL=info
PRETTY_LOGGING=true

# Hot Reload
HOT_RELOAD=true

# ========================================
# Testing
# ========================================
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/mary_test
TEST_REDIS_URL=redis://localhost:6379/1

# ========================================
# Feature Flags
# ========================================
FEATURE_AI_AGENTS=true
FEATURE_CRM=true
FEATURE_SOCIAL_MEDIA=true
FEATURE_PAYMENTS=true
FEATURE_ANALYTICS=true

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CORS Configuration
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,tauri://localhost
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ========================================
# Session Configuration
# ========================================
SESSION_SECRET=your_session_secret_minimum_32_characters_long
SESSION_NAME=mary_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_MAX_AGE=86400000

# ========================================
# WebSocket Configuration
# ========================================
WS_PING_INTERVAL=30000
WS_MAX_PAYLOAD=104857600